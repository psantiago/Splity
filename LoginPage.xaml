<Page
    x:Class="Splity.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Splity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="149" Margin="536,296,0,0" VerticalAlignment="Top" Width="290">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Margin="10,0,0,0"/>
            <TextBox Name="Email" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="101,0,0,0" Width="180"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Margin="10,37,0,0"/>
            <TextBox Name="Password" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="101,37,0,0" Width="180"/>
            <Button Content="Jack in" HorizontalAlignment="Left" Margin="98,104,0,0" VerticalAlignment="Top" Click="Button_Click" />
        </Grid>
        <TextBlock Name="ErrorMessage" HorizontalAlignment="Left" Margin="536,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="290" Foreground="#FFCD6464" FontSize="22"/>
    </Grid>
</Page>
